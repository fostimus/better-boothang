<% if (boothangs.length === 1) {%>
  <h3>Current BooThang</h3>
<% } else { %>
  <h3>Current BooThangs</h3>
<% } %>
<ul>
  <% boothangs.forEach(function(boothang) { %>
    <li><%= boothang.name %> : <%= boothang.phoneNumber %></li>
  <% }) %>
</ul>

<h3>Enter your BooThang's info below!</h3>
<form action="/user" method="POST">
    <label for="booName">Boo Name</label>
    <input id="booName" type="text" name="name">

    <label for="booNumber">Boo Number</label>
    <input id="booNumber" type="number" name="phoneNumber">

    <input type="submit" value="Add BooThang">
</form>

<h3>Select Your Message</h3>
<p>Enter your text message below, or choose one of our premade messages</p>

<form action="/user/messages" method="post">
  <ul class="messages">
  <% messages.forEach(function(message) { %>
    <li><a href='#'><%= message.message %></a></li>
  <% }) %>
  </ul>

  <input id='message-to-boo' type="text" name="message" value="">
  <button type="submit" name="button">Choose this message</button>
</form>
